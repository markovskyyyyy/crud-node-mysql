<div
  class="block mx-auto my-12 p-8 bg-white lg:w-1/3 md:w-2/3 sm:w-full border border-gray-200 rounded-lg shadow-lg text-gray-800"
>
  <h1 class="text-3xl m-5 font-bold text-center">Registro</h1>

  <form action="" method="post" class="mt-4">
    <input
      type="text"
      name="name"
      placeholder="Nombre"
      class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
      required
    />
    <input
      type="email"
      name="email"
      placeholder="Correo electrónico"
      class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
      required
    />
    <input
      type="password"
      name="password"
      placeholder="Contraseña"
      class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
      required
    />

    <button
      type="submit"
      class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700"
    >Registrar</button>

    {{#if error}}
      <p class="text-red-700">{{error}}</p>
    {{/if}}
  </form>

  <!-- Mensaje para iniciar sesión -->
  <p class="text-center text-gray-600 mt-4">
    ¿Ya tienes cuenta?
    <a href="/login" class="text-green-500 font-semibold hover:text-green-600">Inicia sesión</a>
  </p>
</div>