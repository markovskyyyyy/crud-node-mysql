<div
  class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800"
>
  <h1 class="text-center text-3x1 font-bold">edit task</h1>

  {{#each tasks}}

    <form class="mt-4" action="" method="post">
      <input
        class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus-bg-white h-10"
        type="text"
        placeholder="task title"
        name="title"
        value="{{title}}"
      />

      <textarea
        class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus-bg-white h-40"
        id=""
        cols="30"
        rows="10"
        placeholder="task description"
        name="description"
      >{{description}}</textarea>
      <button
        type="submit"
        class="rouded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-600 focus:bg-green-700"
      > send</button>
    </form>

  {{/each}}
</div>